<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.andylx96.gilsonapi.Pair2Activity">

    <Button
        android:id="@+id/connectDeviceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="267dp"
        android:layout_marginStart="8dp"
        android:text="Connect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/connectionStatus2"
        app:layout_constraintTop_toBottomOf="@+id/connectionStatus2" />

    <TextView
        android:id="@+id/connectionStatus2"
        android:layout_width="123dp"
        android:layout_height="0dp"
        android:layout_marginTop="147dp"
        android:text="Device Not Connected"
        app:layout_constraintBottom_toTopOf="@+id/connectDeviceButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
